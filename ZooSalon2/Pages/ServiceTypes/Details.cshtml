@page
@model ZooSalon2.Pages.ServiceTypes.DetailsModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h2 class="text-info">Подробнее</h2>

<input type="hidden" asp-for="ServiceType.Id" />
<div class="white-background border">

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="ServiceType.Name">Имя</label>
        </div>

        <div class="col-5">
            <input asp-for="ServiceType.Name" class="form-control" readonly />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="ServiceType.Price">Цена</label>
        </div>

        <div class="col-5">
            <input asp-for="ServiceType.Price" class="form-control" readonly />
        </div>

    </div>

    <div class="form-group row">
        <div class="col-5 offset-2">
            <div class="row">
                <div class="col-6">
                    <a class="btn btn-outline-primary form-control" asp-page="Edit" asp-route-id="@Model.ServiceType.Id">Изменить</a>

                </div>
                <div class="col-6">
                    <a class="btn btn-outline-success form-control" asp-page="Index">Назад</a>

                </div>
            </div>
        </div>
    </div>
</div>
