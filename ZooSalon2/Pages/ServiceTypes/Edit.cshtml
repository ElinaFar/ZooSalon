@page
@model ZooSalon2.Pages.ServiceTypes.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2 class="text-info">Изменить услугу</h2>
<form method="post">
    <input type="hidden" asp-for="ServiceType.Id" />
    <div class="white-background border">
        <div class="row">
            <div class="col-5 offset-2">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Name">Имя</label>
            </div>

            <div class="col-5">
                <input asp-for="ServiceType.Name" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="ServiceType.Name"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Price">Цена</label>
            </div>

            <div class="col-5">
                <input asp-for="ServiceType.Price" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="ServiceType.Price"></span>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-outline-primary form-control" value="Изменить" />

                    </div>
                    <div class="col-6">
                        <a class="btn btn-outline-success form-control" asp-page="Index">Назад</a>

                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

