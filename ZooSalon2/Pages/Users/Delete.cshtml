@page
@model ZooSalon2.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h2 class="text-info pt-2 pb-3">Удалить аккаунт.</h2>
<div class="white-background row border">
    <div class="col-8">
        <form method="post">

            @Html.HiddenFor(m => m.ApplicationUser.Id)

            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="ApplicationUser.FirstName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ApplicationUser.FirstName" class="form-control" readonly />
                </div>
            </div>

            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="ApplicationUser.LasttName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ApplicationUser.LasttName" class="form-control" readonly />
                </div>
            </div>


            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="ApplicationUser.Email"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ApplicationUser.Email" class="form-control" readonly />
                </div>
            </div>

            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="ApplicationUser.PhoneNumber"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ApplicationUser.PhoneNumber" class="form-control" readonly />
                </div>
            </div>

            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="ApplicationUser.Birthday"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ApplicationUser.Birthday" class="form-control" readonly />
                </div>
            </div>


            <div class="row form-group">
                <div class="col-4">

                </div>

                <div class="col-8">
                    <div class="row">
                        <div class="col-6">
                            <button type="submit" class="btn btn-outline-danger form-control">Удалить</button>

                        </div>

                        <div class="col-6">
                            <a asp-page="Index" class="btn btn-outline-success form-control">Назад</a>
                        </div>
                    </div>
                </div>
            </div>


        </form>
    </div>

</div>